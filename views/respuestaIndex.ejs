         </ol>
       </nav>
         <h1 style="padding-left: 40px;" class="display-1">Discord Bot</h1>
    </header>
    <div class="contenedor container .table-responsive">
      <br>
      <div class="table-responsive">
        <table class="tablaIndex table-hover table-bordered table table-dark table-striped">
          <thead class="thead-light">
            <tr>
              <td scope="col"><b>Usertag</b></td>
              <td scope="col"><b>Tiempo</b></td>
              <td scope="col"><b>Puntuaci√≥n</b></td>
              <td scope="col" colspan="2"><b>Action</b></td>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < respuestas.length; i++) { %>
            <tr>
              <th scope="row"><%= respuestas[i].usertag %></th>
              <td><%= respuestas[i].tiempo %></td>
              <td><%= respuestas[i].puntuacion %></td>
              <td><a href="/respuestas/editar/<%= respuestas[i]._id %>" class="btn btn-success">Editar</a></td>
              <td><a href="/respuestas/eliminar/<%= respuestas[i]._id %>" class="btn btn-danger">Eliminar</a></td>
            </tr>
            <% } %>
          </tbody>
        </table>
    </div>
    <br>
    <a href="/respuestas/respuestaAnadir" class="btn btn-dark">Crear</a>
    </div>

    <script>
        respuestas.sort((a,b) =>{
            return a.puntuacion - b.puntuacion;
        });

        respuestas.forEach((e) =>{
            console.log(`${e.usertag} ${e.timepo} ${e.puntuacion}`);
        });
    </script>

